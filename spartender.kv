# Keypad Popup
<KeypadPopup>:
    pin1Observer: pin1
    pin2Observer: pin2
    pin3Observer: pin3
    pin4Observer: pin4
    name: 'keypadPopup'
    title: 'Enter your pin: '
    title_size: '24sp'
    size_hint: .65, .85
    auto_dismiss: False

    # Opens settings after long press is successful
    on_verification: app.open_settings()

    # This is for all of the pin popup layouts
    BoxLayout:
        orientation: 'vertical'
        spacing: 10

        # Horizontal layout to display the pin stars to show how many digits have been input
        BoxLayout:
            orientation: 'horizontal'
            spacing: 0
            pos_hint: {'center_x': .5, 'top': .9}

            PinEnteredLabel:
                id: pin1

            PinEnteredLabel:
                id: pin2

            PinEnteredLabel:
                id: pin3

            PinEnteredLabel:
                id: pin4

        PinPopupRow:
            PinButton:
                id: num1
                text: '1'
                on_press: root.do_pin_pressed(self.text)
            PinButton:
                id: num2
                text: '2'
                on_press: root.do_pin_pressed(self.text)
            PinButton:
                id: num3
                text: '3'
                on_press: root.do_pin_pressed(self.text)

        PinPopupRow:
            PinButton:
                id: num4
                text: '4'
                on_press: root.do_pin_pressed(self.text)
            PinButton:
                id: num5
                text: '5'
                on_press: root.do_pin_pressed(self.text)
            PinButton:
                id: num6
                text: '6'
                on_press: root.do_pin_pressed(self.text)

        PinPopupRow:
            PinButton:
                id: num7
                text: '7'
                on_press: root.do_pin_pressed(self.text)
            PinButton:
                id: num8
                text: '8'
                on_press: root.do_pin_pressed(self.text)
            PinButton:
                id: num9
                text: '9'
                on_press: root.do_pin_pressed(self.text)

        PinPopupRow:
            Button:
                id: pinClose
                text: ''
                on_press: root.dismiss()
                Image:
                    x: self.parent.x + 10
                    y: self.parent.y + 10
                    size: self.parent.width - 20, self.parent.height - 20
                    source: './assets/design/close.PNG'
            PinButton:
                id: num0
                text: '0'
                on_press: root.do_pin_pressed(self.text)
            Button:
                id: pinDelete
                text: ''
                on_press: root.do_pin_deleted()
                Image:
                    x: self.parent.x + 10
                    y: self.parent.y + 10
                    size: self.parent.width - 20, self.parent.height - 20
                    source: './assets/design/delete.PNG'




